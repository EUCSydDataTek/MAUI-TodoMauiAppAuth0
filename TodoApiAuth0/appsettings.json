{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "TodoDBConnectionString": "Data Source=Todo.db"
  },

  // * Used by Auth0 *
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "ValidAudiences": [ "<AUDIENCE FOR YOUR WEBAPI APP>" ],
        "Authority": "https://<YOUR AUTH0 DOMAIN>",
        "ValidIssuer": "<YOUR AUTH0 DOMAIN>"
      }
    }
  }
}
